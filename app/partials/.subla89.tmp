<div class="col-xs-3" id="myDinner">

		My Dinner
		<div>
			<input type="number" ng-model="numberOfGuests" ng-change="setNumberOfGuest(numberOfGuests)" min="1"/>
		</div>
		<div class="row">
			<div class="col-xs-12 sidebarTableTitle">
				<table class="tableSidebar">
					<tr>
						<td></td>
						<td class="textAlignCenter">Dish Name</td>
						<td class="textAlignRight">Cost</td>
						<td></td>
					</tr>
				</table>
			</div>
		</div>

		<table class="tableSidebar">
			<tr class="border" ng-repeat="dish in getMenu()">
				<td>{{numberOfGuests}}</td>
				<td class="textAlignCenter">{{dish.Title}}</td>
				<td class="textAlignRight">{{getPrice(dish) * getNumberOfGuests()}} SEK</td>
				<td>
					<button class="removeButton" dishid="{{dish.dishID}}">‚ìç</button>
				</td>
			</tr>
			<tr>
				<td colspan="2">Pending</td>
				<td class="textAlignRight">{{getPendingPrice()}}</td>
			</tr>
			<tr>
				<td class="textAlignRight borderTop" colspan="3">{{getTotalMenuPrice() * getNumberOfGuests() + getPendingPrice()}} SEK</td>
			</tr>
		</table>
		<div class="center">
			<button class="btn" id="confirmDinnerButton">Confirm Dinner</button>
		</div>

</div>













